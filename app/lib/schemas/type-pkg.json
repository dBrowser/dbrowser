{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [{"$ref": "index.json"}],
  "title": "Type Package",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "const": "type-pkg"
    },
    "driveTypes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"}
        }
      }
    }
  }
}