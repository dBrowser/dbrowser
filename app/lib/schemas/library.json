{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Library",
  "type": "object",
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "library"
    },
    "drives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{64}$"
          },
          "isHosting": {
            "type": "boolean"
          },
          "visibility": {
            "type": "string",
            "enum": ["private", "unlisted", "public"]
          },
          "savedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}